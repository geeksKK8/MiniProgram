.UCenter-bg {
  background-color: gray;
  background-size: cover;
  height: 400rpx;
  display: flex;
  justify-content: center;
  padding-top: 0rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
  font-size: 40rpx;
  background-color: rgba(0, 0, 0, 0); 
  margin: 0;
  padding: 0;
  float: left;
  font-weight: normal;
}
.userinfo-nickname::after{
border: none;
}

.userinfo {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #FFF;
  border: 1px solid rgba(0, 0, 0, .1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  margin-bottom: 40rpx;
}

.user-info-level {
  border-radius: 14px;
  float: left;
  font-size: 8px;
  color: white;
  align-items: center;
  padding: 4px 6px 4px 6px;
  background-color: orange;
  font-weight: 800;
  margin-left: 16rpx;
}
.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
.copyright{
  display: flex;
  flex-direction: column;
  align-items: center;
}
map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}
.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-block-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}
